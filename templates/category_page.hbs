      </a>
      {{/if}}
      {{/if}}
        {{#if sections}}
        <ul class="article-list section-list">
        	{{#each sections}}
          <li class="article-list-item link-arrow-right hidden">
            <a title="{{name}}" href="{{url}}">{{name}}</a>
        	</li>
        	{{/each}}
        </ul>
        {{/if}}
      {{#if sections}}
        <a title="{{dc 'helpcenter-see_all_articles'}}" href="{{url}}" class="see-all-articles button button-sm button-trans-blue hidden see-all-common">{{dc 'helpcenter-see_all_articles'}}</a>
        {{else}}
        {{#if articles}}
        {{else}}
      <i class="section-empty">
        <a title="empty" href="{{url}}">{{t 'empty'}}</a>
      </i>
        {{/if}}
        {{/if}}
      </div>
    </div>
    {{/each}}
  </div>
</section>
<script>
  $(function(){
  $('.section-content').each(function(){
  var x = ($(this).children('.only-article-list').length != 0) ? $(this).closest('.section-content').children('.only-article-list')[0].children.length : 0,
  y = 0,
  button = $(this).closest('.section-content').children('.more-articles-button').length;
  if ($(this).children('.section-list').length != 0) {
  	$(this).children('.section-list').each(function() {
  		y = $(this)[0].children.length;
  		if ((x + y) > 6) {
  			if (x < 6) {
        	y = 6 - x;
        } else if (y < 6) {
  				x = 6 - y;
  			} else {
  				x = 3;
  				y = 3;
  			}
  			$(this).next().removeClass('hidden');
  		}
  	});
  } else if ($(this).children('.more-articles-button').length != 0) {
  	$(this).children('.more-articles-button').removeClass('hidden');
  }
  let xShow = 0;
  while (xShow < x) {
  	var articles = $(this).children('.only-article-list')[0];
    $(articles.children[xShow]).removeClass('hidden');
    if(xShow == x - 1) {
    	$(articles.children[xShow]).addClass('indent-mb-0');
    }
    xShow++;
  }
  let yShow = 0;
  while (yShow < y) {
  	var sections = $(this).children('.section-list')[0];
    $(sections.children[yShow]).removeClass('hidden');
  	if(yShow == y - 1) {
    	$(sections.children[yShow]).addClass('indent-mb-0');
    }
    yShow++;
  }
  });
  loadReorderedListOfSection();
  });
</script>


<nav class="my-activities-nav collapsible-nav">
  <ul class="collapsible-nav-list container">
    {{#if help_center.request_management_enabled}}
      <li>{{link 'requests'}}</li>
    {{/if}}
    <li>{{link 'contributions'}}</li>
    <li aria-selected=true>{{t 'following'}}</li>
  </ul>
</nav>

<section class="visual-gradient visual-160">
  <div class="container">
    <div class="row">
      <div class="col-sm-12">
        <div class="request-breadcrumbs">{{breadcrumbs}}</div>
        <h1>{{t 'following'}}</h1>
      </div>
    </div>
  </div>
</section>

<section class="request-container">
	<div class="container">
		<div class="row">
      <div class="col-sm-12">
        <div class="my-activities-following-header">
          <span class="dropdown">
            <span class="dropdown-toggle">
              {{current_filter.label}}
            </span>
            <span class="dropdown-menu" role="menu">
              {{#each filters}}
                <a href="{{url}}" aria-selected="{{selected}}" role="menuitem">
                  {{name}}
                </a>
              {{/each}}
            </span>
          </span>
        </div>

        <div class="requests">
          {{#if subscriptions}}
            <table class="table my-activities-table subscriptions-table">
              <thead>
                <tr>
                  <th>{{t 'title'}}</th>
                  <th>{{t 'type'}}</th>
                  <th>{{t 'subscription'}}</th>
                  <th></th>
                </tr>
              </thead>
              <tbody>
                {{#each subscriptions}}
                  <tr>
                    <td>
                      {{#is type 'user'}}
                        <img class="user-avatar" src="{{avatar_url}}" alt="Avatar">
                      {{/is}}
                      <a href="{{url}}" title="{{title}}" class="striped-list-title">
                        {{excerpt title characters=60}}
                      </a>
                    </td>
                    <td>{{name}}</td>
                    <td>{{following}}</td>
                    <td class="subscriptions-unsubscribe">{{subscribe}}</td>
                  </tr>
                {{/each}}
              </tbody>
            </table>

          {{pagination}}
          {{else}}
            <p class="no-activities">{{t 'not_following'}}</p>
          {{/if}}
        </div>
      </div>
    </div>
  </div>
</section>
